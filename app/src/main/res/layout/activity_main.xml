<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_columnSpan="2"
        android:backgroundTint="#2196F3"
        android:text="Conseder Permisão de GPS"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="start"
        android:backgroundTint="#2196F3"
        android:text="Ativar GPS"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:backgroundTint="#2196F3"
        android:text="Desativar GPS"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="top"
        android:backgroundTint="#2196F3"
        android:text="Iniciar Percuso"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="185dp"
        android:layout_height="60dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="top"
        android:backgroundTint="#2196F3"
        android:text="Terminar Percurso"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="252dp"
        android:layout_height="80dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="right|top"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="252dp"
        android:layout_height="80dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="right|top"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="bottom|center"
        android:text="Distância Percorrida"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:layout_row="4"
        android:layout_column="0"
        android:gravity="bottom|center"
        android:text="Tempo Passado"
        android:textSize="20dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="center|right|top"
        android:layout_margin="@dimen/fab_margin"
        android:foregroundGravity="top"
        android:src="@drawable/ic_search_black_24dp"
        app:rippleColor="@android:color/background_light" />


</GridLayout>